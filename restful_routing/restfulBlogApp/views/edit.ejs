<% include partials/header %>
<div class="ui container">
    <div class="ui main text container segment">
        <div class="ui huge header">
            Edit "<%= blog.title %>"
        </div>
    </div>
<form class="ui form" action="/blogs" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" value="<%= blog.title %>" name="blog[title]" required>
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" value="<%= blog.image %>" name="blog[image]" required>
    </div>
    <div class="field">
        <label>Text</label>
        <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>
    <button class="ui orange basic big button" type="submit">Submit!</button>
</form>
</div>
<% include partials/footer %>
