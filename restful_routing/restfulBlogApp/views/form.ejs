<% include partials/header %>
<div class="ui container">
    <div class="ui main text container segment">
        <div class="ui huge header">
            Create a new blog post!
        </div>
    
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Title" name="blog[title]" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" placeholder="Image URL" name="blog[image]" required>
        </div>
        <div class="field">
            <label>Text</label>
            <textarea placeholder="Type your blog content" name="blog[body]"></textarea>
        </div>
        <button class="ui orange basic big button" type="submit">Submit!</button>
    </form>
    </div>
</div>
